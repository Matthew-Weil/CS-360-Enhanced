<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2E4A"
    android:orientation="vertical">


    <Space
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/login_Header"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="E-Z INVENTORY"
        android:textColor="#ADD8E6"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/login_username_field"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Username"
        android:textColor="#ADD8E6"
        android:textColorHint="#ADD8E6"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/login_password_field"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#ADD8E6"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_create_account_button"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:textColor="#ADD8E6"
            android:onClick="createAccount"
            android:text="Create Account" />

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:textColor="#ADD8E6"
            android:onClick="loginToAccount"
            android:text="Login" />
    </LinearLayout>


    <TextView
        android:id="@+id/login_error_response"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_weight="1" />

</LinearLayout>